# Dockerfile for Lag-Llama LLM Service (with pre-downloaded model)
FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements first (for layer caching)
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Copy download script
COPY download_model.py .

# üî• PRE-DOWNLOAD MODEL DURING BUILD (This is what you wanted!)
# This runs ONCE when building the image, not on every container start
RUN echo "===========================================" && \
    echo "‚è∞ DOWNLOADING LAG-LLAMA MODEL..." && \
    echo "This will take 30 min - 4 hours" && \
    echo "===========================================" && \
    python download_model.py || echo "‚ö†Ô∏è  Download failed, will retry at runtime"

# Copy application code
COPY app.py .
COPY app_simple.py .

# Expose port
EXPOSE 8000

# Set environment variables
ENV PYTHONUNBUFFERED=1
ENV LAG_LLAMA_SERVICE_URL=http://localhost:8000
ENV HF_HOME=/root/.cache/huggingface

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Start the service
# Model is already downloaded, so API will be fast!
CMD ["python", "app.py"]




